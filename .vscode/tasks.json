{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "Build C++",
      "command": "/usr/bin/g++",
      "args": ["-g", "*.cpp", "-o", "main"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
